<script>
function finishTest() {
  let score = 0;
  document.querySelectorAll('input[type="radio"]:checked')
    .forEach(a => score += parseInt(a.value));

  let iqEstimate = 90 + score * 10;

  document.getElementById("range").innerText =
    `${iqEstimate - 5} – ${iqEstimate + 5}`;

  document.getElementById("quiz").classList.add("hidden");
  document.getElementById("results").classList.remove("hidden");

  window._finalIQ = iqEstimate;
}

function fakeCheckout() {
  // Replace this with Stripe later
  document.getElementById("results").classList.add("hidden");
  document.getElementById("fullResults").classList.remove("hidden");
  document.getElementById("finalScore").innerText = window._finalIQ;
}
</script>
